<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/teacher_home"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".SecondActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Welcome"
        android:textSize="50dp"
        android:textColor="#9E1C1C"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        >
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Please update your activity"
        android:textSize="30dp"
        android:textColor="#9E1C1C"
        android:textStyle="bold"
        android:layout_marginBottom="40dp"
        >
    </TextView>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/change_time"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="Routine"
        android:textSize="20dp"
        android:textStyle="bold"
        >

    </Button>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/extraClass"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="Extra Class"
        android:textSize="20dp"
        android:textStyle="bold"
        >

    </Button>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/cancelClass"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="Cancel Class"
        android:textSize="20dp"
        android:textStyle="bold"
        >

    </Button>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/pick_date"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="Exams"
        android:textSize="20dp"
        android:textStyle="bold"

        >

    </Button>




</LinearLayout>